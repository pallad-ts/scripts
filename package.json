{
  "name": "@pallad/scripts",
  "version": "3.1.0",
  "description": "Development scripts for @pallad and alpha-* packages",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "compile": "rm -rf compiled && tsc --incremental --project src",
    "lint": "eslint src/**/*.ts",
    "prepack": "oclif manifest && oclif readme && npm run compile",
    "postpack": "shx rm -f oclif.manifest.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pallad-ts/scripts.git"
  },
  "author": "Łukasz Kużyński <lukasz.kuzynski@gmail.com> (http://wookieb.pl)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pallad-ts/scripts/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "bin": {
    "pallad-scripts": "./bin/run"
  },
  "types": "compiled/index.d.ts",
  "oclif": {
    "bin": "pallad-scripts",
    "commands": "./compiled/commands",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "files": [
    "/bin",
    "/compiled",
    "/oclif.manifest.json",
    "/templates",
    "/dist",
    "/jest-preset.js"
  ],
  "homepage": "https://github.com/wookieb/alpha-scripts#readme",
  "dependencies": {
    "@oclif/core": "^3",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^4",
    "@pallad/eslint-config": "^1.2",
    "@types/jest": "^29.5.11",
    "@types/sinon": "^17",
    "eslint": "^8",
    "jest": "^29",
    "jest-junit": "^14",
    "resolve-bin": "^1",
    "ts-jest": "^29",
    "tslib": "^2",
    "typescript": "^5"
  },
  "peerDependencies": {
    "sinon": "^17"
  },
  "devDependencies": {
    "globby": "^13",
    "oclif": "^4",
    "shx": "^0.3.3",
    "ts-node": "^10"
  }
}
